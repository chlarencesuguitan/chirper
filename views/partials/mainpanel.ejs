        <div class="mainpanel col-xs-12 col-md-9 col-lg-6 rounded bg-light">
            <h2><b>Home</b></h2>
            <form action="/posts" method="POST" class="border rounded p-3 mb-3">
                <div class="mb-2">
                    <textarea
                    name="content"
                    id="" class="form-control"
                    rows="3"
                    placeholder="What's happening?"
                    maxlength="280"
                    required
                    ></textarea>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="chirpbtnmain btn btn-primary btn-sm" type="submit">
                        Chirp
                    </button>
                </div>
            </form>


            <% for (let chirp of chirps) { %>
                <div class="chirp d-flex p-3 border-bottom rounded">
                    <div class="me-3">
                        <img src="pfp.avif" alt="profile" class="pfp">
                    </div>
                    <div class="flex-grow-1">
                        <p class="mb-1 fw-bold">Chlarence Suguitan</p>
                        <p class="mb-0"><%= chirp.content %></p>
                    </div>
                    <%= console.log(chirps)  %>
                </div>
            <% } %>



        </div>